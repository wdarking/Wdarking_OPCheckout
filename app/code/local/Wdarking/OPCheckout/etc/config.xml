<?xml version="1.0"?>
<config>
  <modules>
    <Wdarking_OPCheckout>
      <version>0.1.0</version>
    </Wdarking_OPCheckout>
  </modules>
  <global>
    <models>
      <wdarking_opcheckout>
        <class>Wdarking_OPCheckout_Model</class>
        <resourceModel>checkout_mysql4</resourceModel>
      </wdarking_opcheckout>
      <checkout>
        <rewrite>
          <type_onepage>Wdarking_OPCheckout_Model_Checkout_Type_Onepage</type_onepage>
        </rewrite>
      </checkout>
      <checkout_mysql4>
        <class>Wdarking_OPCheckout_Model_Mysql4</class>
        <entities>
          <address>
            <table>address</table>
          </address>
        </entities>
      </checkout_mysql4>
    </models>
    <!-- <events>
      <controller_action_predispatch_checkout_onepage_saveBilling>
        <observers>
          <wdarking_opcheckout>
            <class>Wdarking_OPCheckout_Model_Observer</class>
            <method>salesQuoteSaveBefore</method>
          </wdarking_opcheckout>
        </observers>
      </controller_action_predispatch_checkout_onepage_saveBilling>
    </events> -->
    <resources>
      <wdarking_opcheckout_setup>
        <setup>
          <module>Wdarking_OPCheckout</module>
          <class>Mage_Customer_Model_Resource_Setup</class>
        </setup>
        <connection>
          <use>core_setup</use>
        </connection>
      </wdarking_opcheckout_setup>
      <wdarking_opcheckout_write>
        <connection>
          <use>core_write</use>
        </connection>
      </wdarking_opcheckout_write>
      <wdarking_opcheckout_read>
        <connection>
          <use>core_read</use>
        </connection>
      </wdarking_opcheckout_read>
    </resources>
    <helpers>
      <wdarking_opcheckout>
        <class>Wdarking_OPCheckout_Helper</class>
      </wdarking_opcheckout>
    </helpers>
    <fieldsets>
      <sales_convert_quote_address>
        <wdk_company_name>
          <to_order_address>*</to_order_address>
          <to_customer_address>*</to_customer_address>
        </wdk_company_name>
        <wdk_company_taxvat>
          <to_order_address>*</to_order_address>
          <to_customer_address>*</to_customer_address>
        </wdk_company_taxvat>
        <wdk_company_ie>
          <to_order_address>*</to_order_address>
          <to_customer_address>*</to_customer_address>
        </wdk_company_ie>
      </sales_convert_quote_address>
    </fieldsets>
  </global>
  <frontend>
    <layout>
      <updates>
        <wdarking_opcheckout>
          <file>wdarking/wdarking_opcheckout.xml</file>
        </wdarking_opcheckout>
      </updates>
    </layout>
    <translate>
      <modules>
        <Wdarking_OPCheckout>
          <files>
            <default>Wdarking_OPCheckout.csv</default>
          </files>
        </Wdarking_OPCheckout>
      </modules>
    </translate>
  </frontend>
</config>
